{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["node_module/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
